{% block script %}
    <!-- Chart -->
    <script src="{{ asset('assets/admin/chart/raphael.min.js') }}"></script>
    <script src="{{ asset('assets/admin/chart/morris.min.js') }}"></script>

    <script>
       $(function() {
            Morris.Donut({
                element: 'morris-donut-chart',
                data: [
                {
                    label: "A vendre",
                    value: {{ nombreVente }}
                }, {
                    label: "A Louer par jours",
                    value: {{ nombreAlouerParJours }}
                }, {
                    label: "A Louer par mois",
                    value: {{ nombreAlouerParMois }}
                }
                ],
                resize: true
            });
        });

       $( document ).ready(function(){
           $('.windows8').hide();
       });

       $('#crawl-data').on('click',function(){
           $('.windows8').show();
           $('#crawl-data').attr("disabled", "disabled");
           $.ajax({
               url: '{{ url('crawler-data') }}',
           }).done(function(data) {
               $('.windows8').hide();
               $('#msg').html(data);
               $('#crawl-data').removeAttr('disabled');
           });
       });

    </script>
{% endblock %}