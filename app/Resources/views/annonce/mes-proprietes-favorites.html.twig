{% extends 'template.html.twig' %}

{% block content %}

    <section id="section-body">

        <div class="container">
            <div class="page-title">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-left">
                            <h2>Mes Propriétés</h2>
                        </div>
                        <div class="page-title-right">
                            <ol class="breadcrumb"><li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i></a></li><li><a href="{{ path('mon-compte.edit') }}">Mon compte</a></li><li class="active">Mes Propriétés favorites</li></ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 col-sm-4 user-dashboard-left">
                    <div class="my-sidebar">
                        <ul class="list-unstyled my-menu">
                            <li> <a href="{{ path('mon-compte.edit') }}"> <i class="fa fa-user"></i> Mon profil </a></li>
                            <li> <a href="{{ path('annonce_mon_proprietes') }}"> <i class="fa fa-building"></i> Mes propriétés </a></li>
                            <li> <a href="{{ path('annonce_new') }}"> <i class="fa fa-plus-circle"></i> Ajouter une nouvelle propriété </a></li>
                            <li class="active"> <a href="{{ path('annonce_mon_proprietes_favorites') }}"> <i class="fa fa-heart"></i> Propriétés favorites </a></li>
                            <li> <a href="{{ path('logout') }}"> <i class="fa fa-unlock"></i> Se déconnecter </a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9 col-sm-8 user-dashboard-right">

                    <div class="account-block">
                        <div class="property-listing list-view">
                            <div class="row">
                                {% for annonce in user.annonces %}
                                <div class="item-wrap">
                                    <div class="property-item table-list">
                                        <div class="table-cell">
                                            <div class="figure-block">
                                                <figure class="item-thumb">
                                                    <span class="label-featured label label-success">En vedette</span>
                                                    <div class="price hide-on-list">
                                                        <h3>AR {{ annonce.prix }}</h3>
                                                        {#<p class="rant"> AR 21,000/mo</p>#}
                                                    </div>
                                                    <a href="#">
                                                        {#<img src="http://placehold.it/364x244" alt="thumb"> 254x170#}
                                                        {% if annonce.galleries %}
                                                            <img src="{{ annonce.galleries|last }}" style="width: 364px; height: 244px;" alt="thumb">
                                                        {% endif %}
                                                    </a>
                                                    <figcaption class="thumb-caption cap-actions clearfix">
                                                        <ul class="list-unstyled actions pull-right">
                                                            <li>
                                                                <span title="" data-placement="top" data-toggle="tooltip" data-original-title="Favorite">
                                                                    <i class="fa fa-heart"></i>
                                                                </span>
                                                            </li>
                                                            <li class="share-btn">
                                                                <div class="share_tooltip fade">
                                                                    <a target="_blank" href="#"><i class="fa fa-facebook"></i></a>
                                                                    <a target="_blank" href="#"><i class="fa fa-twitter"></i></a>
                                                                </div>
                                                                <span title="" data-placement="top" data-toggle="tooltip" data-original-title="Partage"><i class="fa fa-share-alt"></i></span>
                                                            </li>
                                                            <li>
                                                                <span data-toggle="tooltip" data-placement="top" title="" data-original-title="Photos (12)">
                                                                    <i class="fa fa-camera"></i> <!--<span class="count">(12)</span>-->
                                                                </span>
                                                            </li>
                                                        </ul>
                                                    </figcaption>
                                                </figure>
                                            </div>
                                        </div>
                                        <div class="item-body table-cell">

                                            <div class="body-left table-cell">
                                                <div class="info-row">
                                                    {#<div class="rating">#}
                                                        {#<span data-title="Average Rate: 4.67 / 5" class="bottom-ratings tip"><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span class="fa fa-star-o"></span><span style="width: 93.4%" class="top-ratings"><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span></span>#}
                                                        {#</span>#}
                                                        {#<span class="star-text-right">15 Votes</span>#}
                                                    {#</div>#}
                                                    <h2 class="property-title"><a href="#">{{ annonce.titre }}</a></h2>
                                                    <h4 class="property-location">{{ annonce.adresse }}</h4>
                                                </div>
                                                <div class="info-row amenities hide-on-grid">
                                                    <p>{{ annonce.category.type }}</p>
                                                    {#<p>#}
                                                        {#{% for caracteristique in annonce.caracteristiques %}#}
                                                            {#<span><input type="checkbox" checked readonly="readonly"/>{{ caracteristique.nom }}</span>#}
                                                        {#{% endfor %}#}
                                                    {#</p>#}
                                                </div>
                                                <div class="info-row date hide-on-grid">
                                                    {% if annonce.user.type == 'simple' %}
                                                        <p><i class="fa fa-user"></i> <a href="{{ path('agent_show',{'id':annonce.user.id}) }}">{{ annonce.user.profileSimpleUser.nom }}</a></p>
                                                    {% elseif annonce.user.type == 'society' %}
                                                        <p><i class="fa fa-user"></i> <a href="{{ path('agent_show',{'id':annonce.user.id}) }}">{{ annonce.user.profileSocietyUser.nom }}</a></p>
                                                    {% endif %}
                                                    <p><i class="fa fa-calendar"></i>
                                                        {% set difference = date(annonce.createdAt).diff(date("now")) %}
                                                        {% set leftDays = difference.days %}
                                                        {% if leftDays == 1 %}
                                                            Il y a 1 jour
                                                        {% else %}
                                                            il y a {{ leftDays }} jours
                                                        {% endif %}
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="body-right table-cell hidden-gird-cell">
                                                <div class="info-row price">
                                                    <h3> AR {{ annonce.prix }}</h3>
                                                    {#<p class="rant"> AR 21,000/mo</p>#}
                                                </div>
                                                <div class="info-row phone text-right">
                                                    <a href="#" class="btn btn-primary">Details <i class="fa fa-angle-right fa-right"></i></a>
                                                    <p>
                                                        <a href="#">
                                                            {% if annonce.user.type == 'simple' %}
                                                                {{ annonce.user.profileSimpleUser.telephone }}
                                                            {% elseif annonce.user.type == 'society' %}
                                                                {{ annonce.user.profileSocietyUser.telephone }}
                                                            {% endif %}
                                                        </a>
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="table-list full-width hide-on-list">
                                                <div class="cell">
                                                    <div class="info-row amenities">
                                                        <p>{{ annonce.category.type }}</p>
                                                        {#<p>#}
                                                            {#{% for caracteristique in annonce.caracteristiques %}#}
                                                                {#<span><input type="checkbox" checked readonly="readonly"/>{{ caracteristique.nom }}</span>#}
                                                            {#{% endfor %}#}
                                                        {#</p>#}
                                                    </div>
                                                </div>
                                                <div class="cell">
                                                    <div class="phone">
                                                        <a href="#" class="btn btn-primary">Details <i class="fa fa-angle-right fa-right"></i></a>
                                                        <p><a href="#">
                                                                {% if annonce.user.type == 'simple' %}
                                                                    {{ annonce.user.profileSimpleUser.telephone }}
                                                                {% elseif annonce.user.type == 'society' %}
                                                                    {{ annonce.user.profileSocietyUser.telephone }}
                                                                {% endif %}
                                                            </a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item-foot date hide-on-list">
                                        <div class="item-foot-left">
                                            <p><i class="fa fa-user"></i> <a href="{{ path('agent_show',{'id':annonce.user.id}) }}">
                                            {% if annonce.user.type == 'simple' %}
                                                {{ annonce.user.profileSimpleUser.nom }}
                                            {% elseif annonce.user.type == 'society' %}
                                                {{ annonce.user.profileSocietyUser.nom }}
                                            {% endif %}
                                                </a>
                                            </p>
                                        </div>
                                        <div class="item-foot-right">
                                            <p><i class="fa fa-calendar"></i>
                                                {% set difference = date(annonce.createdAt).diff(date("now")) %}
                                                {% set leftDays = difference.days %}
                                                {% if leftDays == 1 %}
                                                    Il y a 1 jour
                                                {% else %}
                                                    il y a {{ leftDays }} jours
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <hr>

                    <!--start Pagination-->
                    <div class="pagination-main">
                        <ul class="pagination">
                            <li class="disabled"><a aria-label="Previous" href="#"><span aria-hidden="true"><i class="fa fa-angle-left"></i></span></a></li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a aria-label="Next" href="#"><span aria-hidden="true"><i class="fa fa-angle-right"></i></span></a></li>
                        </ul>
                    </div>
                    <!--start Pagination-->
                </div>
            </div>
        </div>

    </section>

{% endblock %}