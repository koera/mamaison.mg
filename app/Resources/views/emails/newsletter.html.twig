                                                                                           target="_blank">
                                                                                            <p style="padding:0 0 4px 0;margin:0;color:#737373;font-weight:400;font-size:12px;line-height:1.333;text-align:left">
                                                                                                {% if a.user.type == 'simple' %}
                                                                                                    {{ a.user.profileSimpleUser.nom }} {{ a.user.profileSimpleUser.prenom }}
