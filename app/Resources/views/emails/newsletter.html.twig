                                                                                                    src="{{ url('mamaison.thumb',{'id':a.id}) }}"
                                                                                                    alt="{{ a.titre }}"
                                                                                                    width="148"
                                                                                                    style="max-height:80px;outline:none;color:#ffffff;max-width:175px;text-decoration:none;width:auto;height:80px"
                                                                                                    >
                                                                                            </a>
                                                                                        </div>
                                                                                    </td>
                                                                                </tr>
                                                                                </tbody>
                                                                            </table>
                                                                        </td>
                                                                    </tr>
                                                                    </tbody>
                                                                </table>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <hr style="background-color:#e5e5e5;margin:0 0 8px 0;color:#d9d9d9;width:20%;border-color:#d9d9d9;border-width:0;border-style:solid;height:1px;text-align:left">
