                                                                                                    {{ a.user.profileSocietyUser.nom }}
                                                                                                {% endif %}
                                                                                            </p>
                                                                                            <p style="margin:0;color:#737373;font-weight:300;font-size:14px;line-height:1.4;text-align:justify;white-space: nowrap;width: 368px; line-height: 57px; max-height: 57px;-webkit-line-clamp: 3;-webkit-box-orient: vertical; overflow: hidden;text-overflow: ellipsis;">
                                                                                                {{ a.description }}
                                                                                            </p>
                                                                                        </a>
                                                                                    </td>
                                                                                    <td valign="top"
                                                                                        style="vertical-align:top">
                                                                                        <div style="overflow:hidden;width:80px;height:80px">
                                                                                            <a href="{{ url('annonce_show',{'ville':'antananarivo' ,'category':a.category.type|slugify,'type':a.typeAnnonce.valeur|slugify,'title':a.titre | slugify,'id':a.id}) }}"
                                                                                               style="color:#008cc9;display:inline-block;text-decoration:none"
                                                                                               target="_blank">
