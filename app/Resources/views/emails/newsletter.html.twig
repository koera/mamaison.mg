                                                        <tbody>
                                                        <tr>
                                                            <td align="left"><p
                                                                        style="margin:0;color:#737373;font-weight:400;font-size:12px;line-height:1.333">
                                                                    {{ a.category.type }} {{ a.typeAnnonce.valeur }} {{ a.adresse }} - {{ a.quartier }}</p></td>
                                                        </tr>
                                                        </tbody>
                                                    </table>
                                                    <table border="0" cellspacing="0" cellpadding="0" width="100%"
                                                           style="padding:8px 24px;width:100%;border-collapse:separate">
                                                        <tbody>
                                                        <tr>
                                                            <td>
                                                                <table border="0" cellspacing="0" cellpadding="0"
                                                                       width="100%" style="border-collapse:separate">
                                                                    <tbody>
                                                                    <tr>
                                                                        <td align="left"
                                                                            style="padding-bottom:6px;text-align:left">
                                                                            <a href="{{ url('annonce_show',{'ville':'antananarivo' ,'category':a.category.type|slugify,'type':a.typeAnnonce.valeur|slugify,'title':a.titre | slugify,'id':a.id}) }}"
                                                                               style="color:#008cc9;display:inline-block;text-decoration:none"
                                                                               target="_blank">
                                                                                <h2 style="margin:0;color:#0077b5;font-weight:400;font-size:18px;line-height:1.3">
