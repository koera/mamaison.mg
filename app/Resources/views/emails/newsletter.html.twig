                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <table border="0" cellspacing="0"
                                                                                   cellpadding="0" width="100%"
                                                                                   style="border-collapse:separate">
                                                                                <tbody>
                                                                                <tr>
                                                                                    <td width="100%" valign="top"
                                                                                        align="left"
                                                                                        style="padding:0 16px 10px 0;width:100%;vertical-align:top;text-align:left">
                                                                                        <a href="{{ url('annonce_show',{'ville':'antananarivo' ,'category':a.category.type|slugify,'type':a.typeAnnonce.valeur|slugify,'title':a.titre | slugify,'id':a.id}) }}"
