{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ profile.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ profile.prenom }}</td>
            </tr>
            <tr>
                <th>Telephne</th>
                <td>{{ profile.telephne }}</td>
            </tr>
            <tr>
                <th>Societe</th>
                <td>{{ profile.societe }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ profile.bio }}</td>
            </tr>
            <tr>
                <th>Facebookid</th>
                <td>{{ profile.facebookId }}</td>
            </tr>
            <tr>
                <th>Linkedinid</th>
                <td>{{ profile.linkedinId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('profile_edit', { 'id': profile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
