                                            <div class="form-group">
                                                {{ form_widget(edit_form.adresse,{'attr':{'placeholder':'Adresse de l\'entreprise'} }) }}
                                                {{ form_errors(edit_form.adresse) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_widget(edit_form.telephone,{'attr':{'placeholder':'Telephone de l\'entreprise'} }) }}
                                                {{ form_errors(edit_form.telephone) }}
                                            </div>
