{% extends 'base.html.twig' %}

{% block content %}
    <div class="tab-content tabstyle">
        <div class="row">
            <div class="col-md-4 col-sm-4"></div>
            <div class="col-md-4 col-sm-4">

                <div class="message">
                    {% if error %}
                        <p class="error text-danger">
                            <i class="fa fa-close"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                        </p>
                    {% endif %}
                </div>
                <form action="{{ path("loginCheck") }}" method="post">
                    <div class="form-group field-group">
                        <div class="input-user input-icon">
                            <input type="text" placeholder="Nom d'utilisateur" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                        </div>
                        <div class="fa-key input-icon">
                            <input type="password" placeholder="mot de passe" id="password" name="_password" required="required" autocomplete="current-password" />
                        </div>
                    </div>
                    <div class="forget-block clearfix">
                        <div class="form-group pull-left">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me"/> Se souvenir de moi
                                </label>
                            </div>
                        </div>
                        <div class="form-group pull-right">
                            <a href="{{ path("reset.index") }}">Mots de passe
                                oubli√©</a>
                        </div>
                    </div>

                    {#<div ></div>#}
                    <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Se connecter" />
                    <a href="{{ path('registration_simple_user') }}" class="btn btn-social btn-bg-facebook btn-block agimmo">S'inscrire</a>
                </form>

                <hr>
                <a href="#" class="btn btn-social btn-bg-facebook btn-block fesiboky"><img src="{{ asset('assets/images/icons/social-facebook.svg') }}" width="9px" height="9px" align="left"/>Se connecter avec
                    facebook</a>
                <a href="#" class="btn btn-social btn-bg-google-plus btn-block tontongoogle"><img src="{{ asset('assets/images/icons/social-google.svg') }}" width="12px" height="12px" align="left"/>Se connecter avec
                    Google</a>
            </div>
            <div class="col-xs-4 col-sm-4"></div>
        </div>
    </div>
{% endblock %}