<div class="tab-content tabstyle">
    <div class="row">
        <div class="col-md-4 col-sm-4"></div>
        <div class="col-md-4 col-sm-4">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register')}) }}
            <div class="message">
                <p class="error text-danger">{{ form.email.vars.errors }}
                </p>
                <p class="error text-danger">{{ form.username.vars.errors }}
                </p>
                <p class="error text-danger">{{ form.plainPassword.first.vars.errors }}
                </p>
                <p class="error text-danger">{{ form.plainPassword.second.vars.errors }}
                </p>
                {#<p class="success text-success"><i class="fa fa-check"></i> Inscription r√©ussite</p>#}
            </div>
            <div class="form-group field-group">
                <div class="input-user input-icon">
                    {{ form_widget(form.username, { 'attr': {'placeholder':'username'} }) }}
                </div>

                <div class="input-email input-icon">
                    {{ form_widget(form.email, { 'attr': {'placeholder':'email'} }) }}
                </div>
                <div class="fa fa-key input-icon">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder':'Mot de passe'} }) }}
                </div>
                <div class="fa fa-key input-icon">
                    {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder':'Confirmer mot de passe'} }) }}
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" required>Accepter les<a href="#"> termes et conditions.</a>.
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
            {{ form_end(form) }}
            <hr>
            <a href="#" class="btn btn-social btn-bg-facebook btn-block"><i class="fa fa-facebook"></i>Se connecter avec
                facebook</a>
            <a href="#" class="btn btn-social btn-bg-google-plus btn-block"><i class="fa fa-google-plus"></i>Se
                connecter avec
                Google plus</a>
        </div>
        <div class="col-xs-4 col-sm-4"></div>
    </div>
</div>
