<div class="tab-content tabstyle">
    <div class="row">
        <div class="col-md-4 col-sm-4"></div>
        <div class="col-md-4 col-sm-4">

            <div class="message">

                {#<p class="success text-success"><i class="fa fa-check"></i> Vous êtes Connectés</p>#}
                {% if error %}
                    <p class="error text-danger">
                        <i class="fa fa-close"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </p>
                {% endif %}
            </div>
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group field-group">
                    <div class="input-user input-icon">
                        <input type="text" placeholder="Nom d'utilisateur" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </div>
                    <div class="fa fa-key input-icon">
                        <input type="password" placeholder="mot de passe" id="password" name="_password" required="required" autocomplete="current-password" />
                    </div>
                </div>
                <div class="forget-block clearfix">
                    <div class="form-group pull-left">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me"/> Se souvenir de moi
                            </label>
                        </div>
                    </div>
                    <div class="form-group pull-right">
                        <a href="#" data-toggle="modal" data-dismiss="modal" data-target="#pop-reset-pass">Mots de passe
                            oublié</a>
                    </div>
                </div>

                {#<div ></div>#}
                <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Se connecter" />
            </form>
            <hr>
            <a href="#" class="btn btn-social btn-bg-facebook btn-block"><i class="fa fa-facebook"></i>Se connecter avec
                facebook</a>
            <a href="#" class="btn btn-social btn-bg-google-plus btn-block"><i class="fa fa-google-plus"></i>Se connecter avec
                Google plus</a>
        </div>
        <div class="col-xs-4 col-sm-4"></div>
    </div>
</div>